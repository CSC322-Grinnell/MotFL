<h1>List of Users</h1>

<table>
  <thead>
    <tr>
      <th>First name </th>
      <th>Last name</th>
      <th>Email</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= link_to 'Show', user, class: 'link_color' %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class: 'link_color' %></td>
        <td><%= link_to 'Destroy', user, class: 'link_color', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

